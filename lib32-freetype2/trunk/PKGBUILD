_pkgsourcename=freetype2
pkgname=lib32-$_pkgsourcename
pkgver=2.3.12
pkgrel=1
pkgdesc="TrueType font rendering library"
url="http://freetype.sourceforge.net"
license=('GPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-zlib')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('6cc0ea372901865f47f2735f6792e39f')
sha256sums=('f7fd3509b116a7abdf7cd91e5e0c626fb9bca379f1a930c62064b62699222da1')
