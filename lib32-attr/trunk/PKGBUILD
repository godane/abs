pkgname=lib32-attr
_pkgname32=${pkgname/lib32-/}
pkgver=2.4.44
pkgrel=2
_pkgrel32=1
pkgdesc="Extended attribute support library for ACL support"
license=(GPL)
url="http://oss.sgi.com/projects/xfs/"
arch=(x86_64)
depends=(lib32-glibc)
groups=(lib32)
source=(ftp://ftp.archlinux.org/core/os/i686/$_pkgname32-$pkgver-$_pkgrel32-i686.pkg.tar.gz)
md5sums=('ff9c97d1d23baffdc1413876bce9eade')

build() {
  cd "$pkgdir"

  mkdir -p opt/lib32/lib/
  mkdir -p opt/lib32/usr/lib/

  cp -a "$srcdir"/lib/*.so* opt/lib32/lib/
  cp -a "$srcdir"/usr/lib/*.so* opt/lib32/usr/lib/
}
