pkgname=bygfoot
pkgver=2.3.2
pkgrel=1
pkgdesc="Football (a.k.a. soccer) management game"
arch=('i686' 'x86_64')
url="http://www.bygfoot.com/"
license=('GPL')
depends=('gtk2' 'zip' 'unzip')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2
	'bygfoot.desktop')
md5sums=('152c0c729c2b5e4428d32b89edc6dd14'
         'acd86cc1d940a79547899718abc23178')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install || return 1

  install -Dm644 support_files/pixmaps/bygfoot_icon.png \
    ${pkgdir}/usr/share/pixmaps/bygfoot.png || return 1
  install -Dm644 ${srcdir}/bygfoot.desktop \
    ${pkgdir}/usr/share/applications/bygfoot.desktop || return 1
}
