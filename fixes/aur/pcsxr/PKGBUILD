## Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=pcsxr
pkgver=1.9.92
pkgrel=1
pkgdesc="A Sony PlayStation emulator based on the PCSX-df Project"
arch=('i686' 'x86_64')
url="http://pcsxr.codeplex.com/"
license=('GPL')
depends=(libgl libglade libxtst libxv oss sdl)
provides=(pcsx)
conflicts=(pcsx pcsx-df)
options=(force !libtool)

source=($pkgname-$pkgver.tar.bz2::"http://download.codeplex.com/Project/Download/FileDownload.aspx?ProjectName=pcsxr&DownloadId=140521&FileTime=129254829621800000&Build=$(wget -qO - http://www.codeplex.com/ | sed -nr 's/^[[:space:]]*Version [[:digit:]]{4}\.([[:digit:]]{1,2}\.){2}([[:digit:]]+)[[:space:]]*$/\2/p' | tail -n 1)")
md5sums=('28411aed0b4424f97227d94bdefaec83')

build() {
    cd "$srcdir/$pkgname-$pkgver"

    ./configure --prefix=/usr --enable-opengl
    make || return 1
    make DESTDIR="$pkgdir/" install || return 1
}

