# Maintainer: Gerardo Exequiel Pozzi <vmlinuz386@yahoo.com.ar>

pkgname=sudokuki
pkgver=1.0
pkgrel=2
pkgdesc="Essential sudoku game"
arch=('i686' 'x86_64')
url="http://sudokuki.sourceforge.net/"
license=('GPL2')
depends=('gtkmm')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2
        sudokuki.desktop)
md5sums=('ee4ed91d8c17541e0c8a859665a053bd'
         'fcdb4b9d61dec18512ce17c648966880')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
  
  install -d $pkgdir/usr/share/applications
  install -m 644 $srcdir/sudokuki.desktop $pkgdir/usr/share/applications/
}

# vim:set ts=2 sw=2 et:
