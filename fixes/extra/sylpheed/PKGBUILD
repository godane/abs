# Contributor: dorphell <dorphell@archlinux.org>

pkgname=sylpheed
pkgver=3.0.3
pkgrel=1
pkgdesc="Lightweight and user-friendly e-mail client"
arch=('i686' 'x86_64')
url="http://sylpheed.sraoss.jp/en/"
license=('GPL')
depends=('gpgme' 'gtkspell')
makedepends=('compface' 'openssl')
options=('libtool')
source=(http://sylpheed.sraoss.jp/${pkgname}/v3.0/${pkgname}-${pkgver}.tar.bz2)
md5sums=('0428c2625961d76ecb62f3965eb6ee88')
sha1sums=('b12f7dbe40de408717229e2b6a4a2ac3218c5985')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-ldap
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
