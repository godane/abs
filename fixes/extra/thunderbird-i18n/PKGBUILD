pkgbase=thunderbird-i18n
pkgname=('thunderbird-af' 'thunderbird-be' 'thunderbird-bg' 'thunderbird-ca' 'thunderbird-cs'
	'thunderbird-da' 'thunderbird-de' 'thunderbird-el' 'thunderbird-en-gb' 'thunderbird-es-ar'
	'thunderbird-es' 'thunderbird-et' 'thunderbird-eu' 'thunderbird-fi' 'thunderbird-fr' 'thunderbird-ga'
	'thunderbird-he' 'thunderbird-hu' 'thunderbird-it' 'thunderbird-ja' 'thunderbird-ko'
	'thunderbird-lt' 'thunderbird-nb' 'thunderbird-nl' 'thunderbird-nn'
	'thunderbird-pa' 'thunderbird-pl' 'thunderbird-pt-br' 'thunderbird-pt' 'thunderbird-ro'
	'thunderbird-ru' 'thunderbird-sk' 'thunderbird-sv' 'thunderbird-tr' 'thunderbird-uk'
	'thunderbird-zh-cn' 'thunderbird-zh-tw')
pkgver=3.1.1
pkgrel=1
pkgdesc="Language packs for Thunderbird"
arch=('any')
url="http://www.mozilla.com/"
license=('MPL' 'GPL')
depends=("thunderbird>=$pkgver")
groups=('thunderbird-i18n')
conflicts=('thunderbird-i18n')
_url=http://ftp.mozilla.org/pub/mozilla.org/thunderbird/releases/${pkgver}/linux-i686/xpi
source=($pkgbase-$pkgver-af.xpi::$_url/af.xpi
        $pkgbase-$pkgver-be.xpi::$_url/be.xpi
        $pkgbase-$pkgver-bg.xpi::$_url/bg.xpi
        $pkgbase-$pkgver-ca.xpi::$_url/ca.xpi
        $pkgbase-$pkgver-cs.xpi::$_url/cs.xpi
        $pkgbase-$pkgver-da.xpi::$_url/da.xpi
        $pkgbase-$pkgver-de.xpi::$_url/de.xpi
        $pkgbase-$pkgver-el.xpi::$_url/el.xpi
        $pkgbase-$pkgver-en-GB.xpi::$_url/en-GB.xpi
        $pkgbase-$pkgver-es-AR.xpi::$_url/es-AR.xpi
        $pkgbase-$pkgver-es-ES.xpi::$_url/es-ES.xpi
	$pkgbase-$pkgver-et.xpi::$_url/et.xpi
        $pkgbase-$pkgver-eu.xpi::$_url/eu.xpi
        $pkgbase-$pkgver-fi.xpi::$_url/fi.xpi
        $pkgbase-$pkgver-fr.xpi::$_url/fr.xpi
        $pkgbase-$pkgver-ga-IE.xpi::$_url/ga-IE.xpi
        $pkgbase-$pkgver-he.xpi::$_url/he.xpi
        $pkgbase-$pkgver-hu.xpi::$_url/hu.xpi
        $pkgbase-$pkgver-it.xpi::$_url/it.xpi
        $pkgbase-$pkgver-ja.xpi::$_url/ja.xpi
        $pkgbase-$pkgver-ko.xpi::$_url/ko.xpi
        $pkgbase-$pkgver-lt.xpi::$_url/lt.xpi
        $pkgbase-$pkgver-nb-NO.xpi::$_url/nb-NO.xpi
        $pkgbase-$pkgver-nl.xpi::$_url/nl.xpi
        $pkgbase-$pkgver-nn-NO.xpi::$_url/nn-NO.xpi
        $pkgbase-$pkgver-pa-IN.xpi::$_url/pa-IN.xpi
        $pkgbase-$pkgver-pl.xpi::$_url/pl.xpi
        $pkgbase-$pkgver-pt-BR.xpi::$_url/pt-BR.xpi
        $pkgbase-$pkgver-pt-PT.xpi::$_url/pt-PT.xpi
	$pkgbase-$pkgver-ro.xpi::$_url/ro.xpi
        $pkgbase-$pkgver-ru.xpi::$_url/ru.xpi
        $pkgbase-$pkgver-sk.xpi::$_url/sk.xpi
        $pkgbase-$pkgver-sv-SE.xpi::$_url/sv-SE.xpi
        $pkgbase-$pkgver-tr.xpi::$_url/tr.xpi
        $pkgbase-$pkgver-uk.xpi::$_url/uk.xpi
        $pkgbase-$pkgver-zh-CN.xpi::$_url/zh-CN.xpi
        $pkgbase-$pkgver-zh-TW.xpi::$_url/zh-TW.xpi)
noextract=("$pkgbase-$pkgver-af.xpi"
           "$pkgbase-$pkgver-be.xpi"
           "$pkgbase-$pkgver-bg.xpi"
           "$pkgbase-$pkgver-ca.xpi"
           "$pkgbase-$pkgver-cs.xpi"
	   "$pkgbase-$pkgver-da.xpi"
           "$pkgbase-$pkgver-de.xpi"
           "$pkgbase-$pkgver-el.xpi"
           "$pkgbase-$pkgver-en-GB.xpi"
           "$pkgbase-$pkgver-es-AR.xpi"
           "$pkgbase-$pkgver-es-ES.xpi"
           "$pkgbase-$pkgver-eu.xpi"
           "$pkgbase-$pkgver-fi.xpi"
           "$pkgbase-$pkgver-fr.xpi"
           "$pkgbase-$pkgver-ga-IE.xpi"
           "$pkgbase-$pkgver-he.xpi"
           "$pkgbase-$pkgver-hu.xpi"
           "$pkgbase-$pkgver-it.xpi"
           "$pkgbase-$pkgver-ja.xpi"
           "$pkgbase-$pkgver-ko.xpi"
           "$pkgbase-$pkgver-lt.xpi"
           "$pkgbase-$pkgver-nb-NO.xpi"
           "$pkgbase-$pkgver-nl.xpi"
           "$pkgbase-$pkgver-nn-NO.xpi"
           "$pkgbase-$pkgver-pa-IN.xpi"
           "$pkgbase-$pkgver-pl.xpi"
           "$pkgbase-$pkgver-pt-BR.xpi"
           "$pkgbase-$pkgver-pt-PT.xpi"
	   "$pkgbase-$pkgver-ro.xpi"
           "$pkgbase-$pkgver-ru.xpi"
           "$pkgbase-$pkgver-sk.xpi"
           "$pkgbase-$pkgver-sv-SE.xpi"
           "$pkgbase-$pkgver-tr.xpi"
           "$pkgbase-$pkgver-uk.xpi"
           "$pkgbase-$pkgver-zh-CN.xpi"
           "$pkgbase-$pkgver-zh-TW.xpi")

build() {
  cd ${srcdir}
}

package_thunderbird-af() {
  pkgdesc="Afrikaans (South Africa) language packs for Thunderbird"
  cd ${srcdir}
  langfile=$pkgbase-$pkgver-af.xpi
  lang=${langfile/.xpi/}
  lang=${lang/$pkgbase-$pkgver-/}
  bsdtar xf ${langfile} || return 1
  sed -i "s|jar:chrome/${lang}.jar|jar:${lang}.jar|" chrome.manifest || return 1
  install -D -m644 chrome/${lang}.jar "${pkgdir}/usr/lib/thunderbird-3.1/chrome/${lang}.jar" || return 1
  install -D -m644 chrome.manifest "${pkgdir}/usr/lib/thunderbird-3.1/chrome/${lang}.manifest" || return 1
}

