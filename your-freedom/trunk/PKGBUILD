# $Id$
# Contributor: Douglas Soares de Andrade <dsa@aur.archlinux.org>

pkgname=your-freedom
pkgver=20091022
pkgrel=1
pkgdesc="A service to bypass Firewalls, Proxies and content Filters and stay anonymous while surfing, playing and downloading"
arch=('any')
url="http://www.your-freedom.net/"
license=('LGPL')
depends=('java-runtime')
source=("http://www.your-freedom.net/ems-dist/freedom-$pkgver-01.zip"
	'freedom.sh')
md5sums=('91969954484bd1373ebcf1875482f78a'
         'a36bb8fcfcc17a143274c734a2fd4f9e')

build() {
  cd $srcdir
  install -d $pkgdir{/usr/share/$pkgname,/usr/bin,/usr/share/java/$pkgname}
  install -m755 ${srcdir}/freedom.sh ${pkgdir}/usr/bin/freedom
  cp -r * $pkgdir/usr/share/$pkgname
  mv $pkgdir/usr/share/$pkgname/*.jar $pkgdir/usr/share/java/$pkgname
  rm -rf $pkgdir/usr/share/$pkgname/*.{exe,zip,dll,EXE}
}
