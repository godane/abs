# Maintainer Stefan Husmann <stefan-husmannt-online.de>

pkgname=protege
pkgver=4.0.2
pkgrel=1
pkgdesc="Free, open source ontology editor and knowledge-base framework"
arch=('any')
url="http://protege.stanford.edu/"
license=('MPL')
depends=('sh' 'java-runtime')
source=("http://$pkgname.stanford.edu/download/$pkgname/4.0/zip/$pkgname-$pkgver.zip" protege.sh)
md5sums=('0186a217705952094d42c4bc4c257fc0'
         '7fe84374b3c9d1b0e1f17f4451fd53e9')
package() {
  cd "$srcdir/Protege_$pkgver"
  install -d $pkgdir/usr/share/java/$pkgname
  cp -r * $pkgdir/usr/share/java/$pkgname
  sed -i 's#-Xmx200M#-Xmx200M -jar#' run.sh
  chmod 755 $pkgdir/usr/share/java/$pkgname/run.sh
  install -Dm755 $srcdir/protege.sh $pkgdir/usr/bin/protege
}
