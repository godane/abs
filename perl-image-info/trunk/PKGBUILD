# Generator  : CPANPLUS::Dist::Arch 0.16
pkgname='perl-image-info'
pkgver='1.30'
pkgrel='1'
pkgdesc="Extract meta information from image files"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Image-Info'
source=('http://search.cpan.org/CPAN/authors/id/S/SR/SREZIC/Image-Info-1.30.tar.gz')
md5sums=('f211fabee186b5a03d5ff389ceb204c4')

build() {
  _DISTDIR="${srcdir}/Image-Info-1.30"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
