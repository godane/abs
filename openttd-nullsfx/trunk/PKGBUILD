# Maintainer: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=openttd-nullsfx
pkgver=1
pkgrel=1
pkgdesc="Shell package to allow running Transport Tycoon Deluxe without opensfx"
arch=('any')
url="http://www.openttd.org"
license=('GPL')
depends=('openttd')
conflicts=('openttd-opensfx')

build() {
	/bin/true
}

package() {
	mkdir -p $pkgdir/usr/share/openttd/data
	touch $pkgdir/usr/share/openttd/data/sample.cat
}
