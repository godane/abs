# Maintainer: Vesa Kaihlavirta <vegai@iki.fi>
# Contributor: Angelo Theodorou <encelo@users.sourceforge.net>

pkgname=warzone2100
pkgver=2.3.1a
pkgrel=1
pkgdesc="3D realtime strategy game on a future Earth"
url="http://wz2100.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('sdl_net' 'libgl' 'openal' 'libjpeg' 'libpng' 'libvorbis' 'libtheora' 'libmad' 'physfs' 'mesa' 'quesoglc' 'popt' 'ttf-dejavu')
makedepends=('gawk' 'bison' 'flex' 'zip' 'unzip')
source=("http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/Warzone%202100%202.3.1/${pkgname}-${pkgver}.tar.gz")
md5sums=('d52299a4f74f18ee58655ea8188e3f0c')

build() {
  cd ${pkgname}-2.3.1

  ./autogen.sh

  ./configure --prefix=/usr 

  make
}

package() {
  cd ${pkgname}-2.3.1

  make DESTDIR=${pkgdir} install
}
