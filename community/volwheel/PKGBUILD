pkgname=volwheel
pkgver=0.2.7
pkgrel=3
pkgdesc="Tray icon to change volume with the mouse"
arch=('any')
url="http://oliwer.net/b/volwheel.html"
license=('GPL')
depends=('perl-gtk2-trayicon')
optdepends=("alsa-utils: for ALSA support"
	    "oss: for OSS support")
source=(http://olwtools.googlecode.com/files/${pkgname}-${pkgver}-fixed.tar.gz)
md5sums=('2a9742d38efacc1e4aefa3e0b9afa5e0')

package() {
	cd ${srcdir}/${pkgname}-${pkgver}-fixed

	./install.pl --prefix=/usr --destdir=${pkgdir}
}
